@using Microsoft.AspNetCore.Components.Authorization

<div class="navbar-content d-flex justify-content-between align-items-center px-4">
    <a class="brand" href="/">
        <i class="bi bi-car-front-fill"></i> CAR MARKET
    </a>

    <div class="nav-links">
        <NavLink href="" Match="NavLinkMatch.All" class="nav-item">Browse</NavLink>
        
        <AuthorizeView>
            <Authorized>
                <NavLink href="car/create" class="nav-item">Add Listing</NavLink>
                <NavLink href="account" class="nav-item fw-bold text-primary">
                    @context.User.Identity?.Name's Account
                </NavLink>
            </Authorized>
            <NotAuthorized>
                <a href="login" class="btn btn-dark btn-sm">Sign In</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<style>
    .brand {
        font-size: 1.5rem;
        font-weight: 800;
        color: #222;
        text-decoration: none;
        letter-spacing: -1px;
    }
    .nav-item {
        margin-left: 20px;
        text-decoration: none;
        color: #555;
        font-size: 0.95rem;
    }
    .nav-item:hover { color: #000; }
    .active { border-bottom: 2px solid #000; padding-bottom: 5px; }
</style>