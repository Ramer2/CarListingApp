@page "/account"
@attribute [Authorize]
@using System.Security.Claims
@using Blazored.LocalStorage
@using CarListingApp.Services.DTOs.User
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime Js
@inject ILocalStorageService LocalStorage

<h1 class="fw-900">ACCOUNT_PROFILE</h1>

@if (_fullUserData == null)
{
    <div class="heavy-card" style="padding: 40px; border-style: dashed;">
        <h3 class="fw-900">SYSTEM_STATUS: @_debugMessage</h3>
    </div>
}
else
{
    @* The Profile Header *@
    <div class="heavy-card">
        <div class="card-left-visual" style="background: #ff00ff; width: 30%; color: white;">
            <i class="bi bi-person-fill" style="font-size: 5rem;"></i>
            <div class="mt-2 fw-bold text-uppercase" style="background: black; padding: 5px 10px;">@_fullUserData.Username</div>
        </div>

        <div class="card-right-info">
            <div class="info-grid" style="grid-template-columns: 1fr;">
                <div class="info-item"><strong>EMAIL:</strong> @_fullUserData.Email</div>
                <div class="info-item"><strong>ROLE:</strong> @_fullUserData.Role</div>
                <div class="info-item"><strong>STATUS:</strong> @(_fullUserData.IsBlocked ? "LOCKED" : "OPERATIONAL")</div>
            </div>
        </div>
    </div>

    @* COMBINED MODIFICATION SECTION *@
    <h3 class="fw-900 mt-5">IDENTITY_&_SECURITY_PROTOCOL</h3>
    <div class="heavy-card" style="background: white; padding: 40px; flex-direction: column; gap: 30px;">
        
        @* Status Banner *@
        @if (!string.IsNullOrEmpty(_formStatus))
        {
            <div class="status-banner" style="border: 2px solid @(_isError ? "#ff0055" : "#00ff00"); color: @(_isError ? "#ff0055" : "#00ff00"); margin-bottom: 5px; padding: 10px; font-weight: 900; font-size: 0.75rem;">
                [@(_isError ? "FAILURE" : "SUCCESS")]: @_formStatus.ToUpper()
            </div>
        }

        @* Row 1: Identity Data *@
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; width: 100%;">
            <div class="input-group">
                <label style="font-size: 0.7rem; font-weight: 900; display: block; margin-bottom: 10px;">NEW_USERNAME*</label>
                <input type="text" @bind="_fullUserData.Username" class="custom-input" placeholder="Required..." style="width: 100%; border: 2px solid black; padding: 12px; font-weight: 700;" />
            </div>
            <div class="input-group">
                <label style="font-size: 0.7rem; font-weight: 900; display: block; margin-bottom: 10px;">NEW_EMAIL_ADDRESS*</label>
                <input type="text" @bind="_fullUserData.Email" class="custom-input" placeholder="Required..." style="width: 100%; border: 2px solid black; padding: 12px; font-weight: 700;" />
            </div>
        </div>
        
        @* Row 2: Security Credentials *@
        <div class="input-group" style="width: 100%; padding-top: 20px; border-top: 1px dashed #ccc;">
            <label style="font-size: 0.7rem; font-weight: 900; display: block; margin-bottom: 10px;">CONFIRM_OR_NEW_PASSWORD*</label>
            <input type="password" @bind="_newPassword" class="custom-input" placeholder="••••••••" style="width: 100%; border: 2px solid black; padding: 12px; font-weight: 700;" />
            <div style="margin-top: 10px;">
                <span style="font-size: 0.6rem; color: #666; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px;">
                    [REQUIRED]: Input valid credentials to overwrite database state.
                </span>
            </div>
        </div>

        @* Action Row *@
        <div style="padding-top: 10px;">
            <button class="btn-black" 
                    style="width: 280px; height: 50px; font-size: 0.8rem; letter-spacing: 1px; background: black; color: white; border: none; font-weight: 900; @(IsFormInvalid ? "opacity: 0.4; cursor: not-allowed;" : "")" 
                    @onclick="UpdateAccount" 
                    disabled="@IsFormInvalid">
                COMMIT_ALL_CHANGES
            </button>
        </div>
    </div>

    @* TERMINATION ZONE *@
    <h3 class="fw-900 mt-5" style="color: #ff0055;">TERMINATION_ZONE</h3>
    <div class="heavy-card" style="border: 4px solid #ff0055; background: black; color: white; padding: 30px; display: flex; align-items: center; justify-content: space-between;">
        <div style="flex: 1;">
            <h4 class="fw-900" style="margin: 0; color: #ff0055;">ERASE_ALL_DATA</h4>
            <p style="font-size: 0.75rem; opacity: 0.8; margin-top: 5px;">
                WARNING: This command will purge your identity and all @(_fullUserData.ListedCars?.Count) associated listings.
            </p>
        </div>
        <button class="btn-industrial" 
                style="background: #ff0055; color: white; border: none; padding: 15px 30px; font-weight: 900; cursor: pointer;" 
                @onclick='() => RequestConfirmation("PERMANENTLY PURGE THIS ACCOUNT AND ALL LISTINGS?", ExecuteDeletion)'>
            EXECUTE_DELETION
        </button>
    </div>

    @* The User's Car Listings *@
    <h3 class="fw-900 mt-5">LISTING_HISTORY (@(_fullUserData.ListedCars?.Count ?? 0))</h3>
    <div class="history-list">
        @foreach (var car in _fullUserData.ListedCars)
        {
            <div class="heavy-card" style="margin-bottom: 15px; background: white; display: flex; border: 2px solid black;">
                <div style="padding: 20px; flex: 1; border-right: 2px solid black;">
                    <div style="font-size: 0.6rem; font-weight: 900; color: #888;">VEHICLE_ID: #@car.Id</div>
                    <h4 style="margin: 5px 0; font-weight: 900;">@car.Brand.ToUpper() @car.Model.ToUpper()</h4>
                    <span class="status-badge" style="display: inline-block; padding: 2px 8px; font-size: 0.6rem; font-weight: 900; background: @(car.Status == "Active" ? "#00ff00" : "magenta"); color: @(car.Status == "Active" ? "black" : "white");">
                        @car.Status.ToUpper()
                    </span>
                </div>
                <div style="width: 150px; display: flex; flex-direction: column; justify-content: center; align-items: center; background: #fafafa;">
                    <div style="font-weight: 900; font-size: 1.2rem;">$@car.Price.ToString("N0")</div>
                    <a href="/car/@car.Id" style="font-size: 0.7rem; color: black; font-weight: bold; margin-top: 10px; text-decoration: none;">VIEW_DETAILS</a>
                </div>
            </div>
        }
    </div>
}

@* CUSTOM MODAL SYSTEM *@
@if (_showConfirmModal)
{
    <div class="modal-backdrop" style="position: fixed; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.8); z-index: 9999; display: flex; align-items: center; justify-content: center;">
        <div class="modal-box" style="background: white; width: 400px; border: 4px solid black;">
            <div class="modal-banner" style="background: #ff0055; color: white; padding: 10px; font-weight: 900; font-size: 0.8rem;">CRITICAL_CONFIRMATION</div>
            <div class="modal-body" style="padding: 30px;">
                <p style="font-weight: 700; font-size: 0.9rem;">@_confirmMessage</p>
                <div class="modal-footer" style="display: flex; gap: 10px; margin-top: 20px;">
                    <button style="background: black; color: white; border: none; padding: 10px 20px; font-weight: 900; cursor: pointer;" @onclick="ExecuteConfirmedAction">PROCEED</button>
                    <button style="background: white; color: black; border: 2px solid black; padding: 10px 20px; font-weight: 900; cursor: pointer;" @onclick="() => _showConfirmModal = false">ABORT</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private UserDto? _fullUserData;
    private string _newPassword = "";
    private string _debugMessage = "INITIALIZING...";
    
    private string _formStatus = "";
    private bool _isError = false;

    // Modal State
    private bool _showConfirmModal = false;
    private string _confirmMessage = "";
    private Func<Task>? _pendingAction;

    private bool IsFormInvalid => 
        _fullUserData == null || 
        string.IsNullOrWhiteSpace(_fullUserData.Username) || 
        string.IsNullOrWhiteSpace(_fullUserData.Email) || 
        string.IsNullOrWhiteSpace(_newPassword);
    
    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        try 
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            var userEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? user.FindFirst("email")?.Value ?? user.FindFirst("emailaddress")?.Value;

            if (string.IsNullOrEmpty(userEmail))
            {
                _debugMessage = "ERROR: EMAIL_CLAIM_MISSING_FROM_TOKEN";
                return;
            }

            var encodedEmail = Uri.EscapeDataString(userEmail);
            var response = await Http.GetAsync($"api/users/by-email/{encodedEmail}");

            if (response.IsSuccessStatusCode)
            {
                _fullUserData = await response.Content.ReadFromJsonAsync<UserDto>();
                _debugMessage = "SUCCESS";
            }
            else
            {
                _debugMessage = $"SERVER_REJECTED: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _debugMessage = $"CRITICAL_EXCEPTION: {ex.Message}";
        }
    }

    private void RequestConfirmation(string message, Func<Task> action)
    {
        _confirmMessage = message;
        _pendingAction = action;
        _showConfirmModal = true;
    }

    private async Task ExecuteConfirmedAction()
    {
        _showConfirmModal = false;
        if (_pendingAction != null) await _pendingAction.Invoke();
    }

    private bool ValidateUpdateData()
    {
        if (_fullUserData == null) return false;

        if (string.IsNullOrWhiteSpace(_fullUserData.Username) || _fullUserData.Username.Length < 3)
        {
            _formStatus = "VALIDATION_FAULT: USERNAME_TOO_SHORT";
            return false;
        }

        if (string.IsNullOrWhiteSpace(_fullUserData.Email) || !_fullUserData.Email.Contains("@"))
        {
            _formStatus = "VALIDATION_FAULT: INVALID_EMAIL_FORMAT";
            return false;
        }

        if (string.IsNullOrWhiteSpace(_newPassword) || _newPassword.Length < 6)
        {
            _formStatus = "VALIDATION_FAULT: PASSWORD_MIN_6_CHARACTERS";
            return false;
        }

        return true;
    }

    private async Task UpdateAccount()
    {
        _formStatus = "PROCESSING_REQUEST...";
        _isError = false;

        if (!ValidateUpdateData())
        {
            _isError = true;
            return;
        }

        var updateDto = new CreateUserDto 
        { 
            Username = _fullUserData!.Username,
            Email = _fullUserData.Email,
            Password = _newPassword,
            RoleName = _fullUserData.Role
        };

        var response = await Http.PutAsJsonAsync($"api/users/{_fullUserData.Id}", updateDto);
        
        if (response.IsSuccessStatusCode)
        {
            _formStatus = "SYSTEM_PROTOCOL_SYNCHRONIZED_SUCCESSFULLY";
            _newPassword = string.Empty; 
            await LoadUserData();
        }
        else
        {
            _isError = true;
            var error = await response.Content.ReadAsStringAsync();
            _formStatus = $"PROTOCOL_REJECTED: {error}";
        }
    }

    private bool ValidateDeletionState()
    {
        if (_fullUserData == null)
        {
            _formStatus = "ERROR: USER_NODE_NOT_INITIALIZED";
            _isError = true;
            return false;
        }
        return true;
    }

    private async Task ExecuteDeletion()
    {
        if (!ValidateDeletionState()) return;

        var response = await Http.DeleteAsync($"api/users/{_fullUserData!.Id}");
        
        if (response.IsSuccessStatusCode)
        {
            await LocalStorage.RemoveItemAsync("authToken");
            Nav.NavigateTo("/", forceLoad: true);
        }
        else
        {
            _isError = true;
            _formStatus = "DATABASE_COMMUNICATION_FAULT: DELETION_REJECTED";
        }
    }
}