@page "/account"
@attribute [Authorize]
@using System.Security.Claims
@using CarListingApp.Services.DTOs.User
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime Js

<h1 class="fw-900">ACCOUNT_PROFILE</h1>

@if (_fullUserData == null)
{
    <div class="heavy-card" style="padding: 40px; border-style: dashed;">
        <h3 class="fw-900">SYSTEM_STATUS: @_debugMessage</h3>
    </div>
}
else
{
    @* The Profile Header *@
    <div class="heavy-card">
        <div class="card-left-visual" style="background: #ff00ff; width: 30%; color: white;">
            <i class="bi bi-person-fill" style="font-size: 5rem;"></i>
            <div class="mt-2 fw-bold text-uppercase" style="background: black; padding: 5px 10px;">@_fullUserData.Username</div>
        </div>

        <div class="card-right-info">
            <div class="info-grid" style="grid-template-columns: 1fr;">
                <div class="info-item"><strong>EMAIL:</strong> @_fullUserData.Email</div>
                <div class="info-item"><strong>ROLE:</strong> @_fullUserData.Role</div>
                <div class="info-item"><strong>DATABASE_ID:</strong> @_fullUserData.Id</div>
                <div class="info-item"><strong>STATUS:</strong> @(_fullUserData.IsBlocked ? "LOCKED" : "OPERATIONAL")</div>
            </div>
        </div>
    </div>

    @* MODIFY SECTION *@
    <h3 class="fw-900 mt-5">USER_SETTINGS</h3>
    <div class="heavy-card" style="background: white; padding: 20px;">
        <div style="display: flex; gap: 15px; align-items: flex-end; width: 100%;">
            <div style="flex: 1;">
                <label style="font-size: 0.7rem; font-weight: 900; display: block; margin-bottom: 5px;">UPDATE_USERNAME</label>
                <input type="text" @bind="_fullUserData.Username" class="custom-input" style="width: 100%; border: 2px solid black; padding: 10px;" />
            </div>
            <button class="btn-black" style="height: 44px; padding: 0 30px;" @onclick="UpdateAccount">SAVE_CHANGES</button>
        </div>
    </div>

    @* DANGER ZONE *@
    <h3 class="fw-900 mt-5" style="color: red;">DANGER_ZONE</h3>
    <div class="heavy-card" style="border-color: red; padding: 20px; background: #fff5f5;">
        <div class="d-flex justify-content-between align-items-center w-100">
            <div>
                <strong style="font-size: 0.8rem;">TERMINATE_ACCOUNT</strong>
                <p style="font-size: 0.7rem; margin: 0;">Once deleted, all your listings and data will be removed from the system.</p>
            </div>
            <button class="btn-industrial btn-danger" @onclick="DeleteAccount" style="padding: 10px 20px;">DELETE_ACCOUNT</button>
        </div>
    </div>

    @* The User's Car Listings *@
    <h3 class="fw-900 mt-5">LISTING_HISTORY (@(_fullUserData.ListedCars?.Count ?? 0))</h3>
    <div class="history-list">
        @foreach (var car in _fullUserData.ListedCars)
        {
            <div class="heavy-card" style="margin-bottom: 15px; background: white;">
                <div style="padding: 20px; flex: 1; border-right: 2px solid black;">
                    <div style="font-size: 0.6rem; font-weight: 900; color: #888;">VEHICLE_ID: #@car.Id</div>
                    <h4 style="margin: 5px 0; font-weight: 900;">@car.Brand.ToUpper() @car.Model.ToUpper()</h4>
                    <span class="status-badge" style="background: @(car.Status == "Active" ? "#00ff00" : "magenta"); color: @(car.Status == "Active" ? "black" : "white");">
                        @car.Status.ToUpper()
                    </span>
                </div>
                <div style="width: 150px; display: flex; flex-direction: column; justify-content: center; align-items: center; background: #fafafa;">
                    <div style="font-weight: 900; font-size: 1.2rem;">$@car.Price.ToString("N0")</div>
                    <a href="/car/@car.Id" style="font-size: 0.7rem; color: black; font-weight: bold; margin-top: 10px;">VIEW_DETAILS</a>
                </div>
            </div>
        }
    </div>
}

@code {
    private UserDto? _fullUserData;
    private string _debugMessage = "INITIALIZING...";

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        try 
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            var userEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? user.FindFirst("email")?.Value ?? user.FindFirst("emailaddress")?.Value;

            if (string.IsNullOrEmpty(userEmail))
            {
                _debugMessage = "ERROR: EMAIL_CLAIM_MISSING_FROM_TOKEN";
                return;
            }

            var encodedEmail = Uri.EscapeDataString(userEmail);
            var response = await Http.GetAsync($"users/by-email/{encodedEmail}");

            if (response.IsSuccessStatusCode)
            {
                _fullUserData = await response.Content.ReadFromJsonAsync<UserDto>();
                _debugMessage = "SUCCESS";
            }
            else
            {
                _debugMessage = $"SERVER_REJECTED: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _debugMessage = $"CRITICAL_EXCEPTION: {ex.Message}";
        }
    }

    private async Task UpdateAccount()
    {
        if (_fullUserData == null) return;

        // Assuming your API endpoint is PUT /api/users/{id}
        var response = await Http.PutAsJsonAsync($"users/{_fullUserData.Id}", _fullUserData);
        
        if (response.IsSuccessStatusCode)
        {
            await Js.InvokeVoidAsync("alert", "IDENTITY_UPDATED_SUCCESSFULLY");
            await LoadUserData();
        }
        else
        {
            await Js.InvokeVoidAsync("alert", "ERROR_UPDATING_IDENTITY");
        }
    }

    private async Task DeleteAccount()
    {
        if (_fullUserData == null) return;

        bool confirmed = await Js.InvokeAsync<bool>("confirm", "CRITICAL_ACTION: PERMANENTLY DELETE ACCOUNT?");
        
        if (confirmed)
        {
            // Assuming your API endpoint is DELETE /api/users/{id}
            var response = await Http.DeleteAsync($"users/{_fullUserData.Id}");
            
            if (response.IsSuccessStatusCode)
            {
                // Force a logout/refresh after account deletion
                Nav.NavigateTo("/logout", forceLoad: true);
            }
            else
            {
                await Js.InvokeVoidAsync("alert", "DELETION_FAILED_BY_SERVER");
            }
        }
    }
}