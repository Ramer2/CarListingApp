@page "/account"
@attribute [Authorize]
@using System.Security.Claims
@using Blazored.LocalStorage
@using CarListingApp.Services.DTOs.User
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime Js
@inject ILocalStorageService LocalStorage

<h1 class="fw-900">ACCOUNT_PROFILE</h1>

@if (_fullUserData == null)
{
    <div class="heavy-card" style="padding: 40px; border-style: dashed;">
        <h3 class="fw-900">SYSTEM_STATUS: @_debugMessage</h3>
    </div>
}
else
{
    @* The Profile Header *@
    <div class="heavy-card">
        <div class="card-left-visual" style="background: #ff00ff; width: 30%; color: white;">
            <i class="bi bi-person-fill" style="font-size: 5rem;"></i>
            <div class="mt-2 fw-bold text-uppercase" style="background: black; padding: 5px 10px;">@_fullUserData.Username</div>
        </div>

        <div class="card-right-info">
            <div class="info-grid" style="grid-template-columns: 1fr;">
                <div class="info-item"><strong>EMAIL:</strong> @_fullUserData.Email</div>
                <div class="info-item"><strong>ROLE:</strong> @_fullUserData.Role</div>
                <div class="info-item"><strong>DATABASE_ID:</strong> @_fullUserData.Id</div>
                <div class="info-item"><strong>STATUS:</strong> @(_fullUserData.IsBlocked ? "LOCKED" : "OPERATIONAL")</div>
            </div>
        </div>
    </div>

    @* COMBINED MODIFICATION SECTION *@
    <h3 class="fw-900 mt-5">IDENTITY_&_SECURITY_PROTOCOL</h3>
    <div class="heavy-card" style="background: white; padding: 30px; flex-direction: column;">
        <div class="row-flex" style="display: flex; gap: 20px; width: 100%;">
            <div class="input-group" style="flex: 1;">
                <label style="font-size: 0.7rem; font-weight: 900;">NEW_USERNAME*</label>
                <input type="text" @bind="_fullUserData.Username" class="custom-input" placeholder="Required..." />
            </div>
            <div class="input-group" style="flex: 1;">
                <label style="font-size: 0.7rem; font-weight: 900;">NEW_EMAIL_ADDRESS*</label>
                <input type="text" @bind="_fullUserData.Email" class="custom-input" placeholder="Required..." />
            </div>
        </div>
        
        <div class="input-group mt-3" style="max-width: 100%;">
            <label style="font-size: 0.7rem; font-weight: 900;">CONFIRM_OR_NEW_PASSWORD*</label>
            <input type="password" @bind="_newPassword" class="custom-input" placeholder="••••••••" />
            <small style="font-size: 0.6rem; color: #666;">(You must enter a password to authorize changes)</small>
        </div>

        <button class="btn-black mt-4" 
                style="width: 250px; @(IsFormInvalid ? "opacity: 0.5; cursor: not-allowed;" : "")" 
                @onclick="UpdateAccount" 
                disabled="@IsFormInvalid">
            COMMIT_ALL_CHANGES
        </button>
    </div>

    @* TERMINATION ZONE (Prettified) *@
    <h3 class="fw-900 mt-5" style="color: #ff0055;">TERMINATION_ZONE</h3>
    <div class="heavy-card" style="border: 4px solid #ff0055; background: black; color: white; padding: 30px;">
        <div style="flex: 1;">
            <h4 class="fw-900" style="margin: 0; color: #ff0055;">ERASE_ALL_DATA</h4>
            <p style="font-size: 0.75rem; opacity: 0.8; margin-top: 5px;">
                WARNING: This command will purge your identity and all @(_fullUserData.ListedCars?.Count) associated listings.
            </p>
        </div>
        <button class="btn-industrial" 
                style="background: #ff0055; color: white; border: none; padding: 15px 30px; font-weight: 900;" 
                @onclick="DeleteAccount">
            EXECUTE_DELETION
        </button>
    </div>

    @* The User's Car Listings *@
    <h3 class="fw-900 mt-5">LISTING_HISTORY (@(_fullUserData.ListedCars?.Count ?? 0))</h3>
    <div class="history-list">
        @foreach (var car in _fullUserData.ListedCars)
        {
            <div class="heavy-card" style="margin-bottom: 15px; background: white;">
                <div style="padding: 20px; flex: 1; border-right: 2px solid black;">
                    <div style="font-size: 0.6rem; font-weight: 900; color: #888;">VEHICLE_ID: #@car.Id</div>
                    <h4 style="margin: 5px 0; font-weight: 900;">@car.Brand.ToUpper() @car.Model.ToUpper()</h4>
                    <span class="status-badge" style="background: @(car.Status == "Active" ? "#00ff00" : "magenta"); color: @(car.Status == "Active" ? "black" : "white");">
                        @car.Status.ToUpper()
                    </span>
                </div>
                <div style="width: 150px; display: flex; flex-direction: column; justify-content: center; align-items: center; background: #fafafa;">
                    <div style="font-weight: 900; font-size: 1.2rem;">$@car.Price.ToString("N0")</div>
                    <a href="/car/@car.Id" style="font-size: 0.7rem; color: black; font-weight: bold; margin-top: 10px;">VIEW_DETAILS</a>
                </div>
            </div>
        }
    </div>
}

@code {
    private UserDto? _fullUserData;
    private string? _newPassword;
    private string _debugMessage = "INITIALIZING...";

    private bool IsFormInvalid => 
        _fullUserData == null || 
        string.IsNullOrWhiteSpace(_fullUserData.Username) || 
        string.IsNullOrWhiteSpace(_fullUserData.Email) || 
        string.IsNullOrWhiteSpace(_newPassword);
    
    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        try 
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            var userEmail = user.FindFirst(ClaimTypes.Email)?.Value ?? user.FindFirst("email")?.Value ?? user.FindFirst("emailaddress")?.Value;

            if (string.IsNullOrEmpty(userEmail))
            {
                _debugMessage = "ERROR: EMAIL_CLAIM_MISSING_FROM_TOKEN";
                return;
            }

            var encodedEmail = Uri.EscapeDataString(userEmail);
            var response = await Http.GetAsync($"users/by-email/{encodedEmail}");

            if (response.IsSuccessStatusCode)
            {
                _fullUserData = await response.Content.ReadFromJsonAsync<UserDto>();
                _debugMessage = "SUCCESS";
            }
            else
            {
                _debugMessage = $"SERVER_REJECTED: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _debugMessage = $"CRITICAL_EXCEPTION: {ex.Message}";
        }
    }

    private async Task UpdateAccount()
    {
        if (IsFormInvalid) 
        {
            await Js.InvokeVoidAsync("alert", "ALL FIELDS (USERNAME, EMAIL, PASSWORD) ARE REQUIRED.");
            return;
        }

        var updateDto = new CreateUserDto 
        { 
            Username = _fullUserData!.Username,
            Email = _fullUserData.Email,
            Password = _newPassword, // Now mandatory
            RoleName = _fullUserData.Role
        };

        var response = await Http.PutAsJsonAsync($"users/{_fullUserData.Id}", updateDto);
        
        if (response.IsSuccessStatusCode)
        {
            await Js.InvokeVoidAsync("alert", "SYSTEM_PROTOCOL_UPDATED");
            _newPassword = string.Empty; 
            await LoadUserData();
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            await Js.InvokeVoidAsync("alert", $"PROTOCOL_ERROR: {error}");
        }
    }

    private async Task DeleteAccount()
    {
        if (_fullUserData == null) return;

        bool confirmed = await Js.InvokeAsync<bool>("confirm", "CRITICAL_ACTION: PERMANENTLY DELETE ACCOUNT?");
        
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"users/{_fullUserData.Id}");
            
            if (response.IsSuccessStatusCode)
            {
                // Clear state and force reset
                await LocalStorage.RemoveItemAsync("authToken");
                Nav.NavigateTo("/", forceLoad: true);
            }
            else
            {
                await Js.InvokeVoidAsync("alert", "DELETION_FAILED_BY_SERVER");
            }
        }
    }
}